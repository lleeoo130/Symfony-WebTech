<!--menu mobile-->


{% trans_default_domain 'nav' %}

<nav class="menu-res hidden-lg hidden-md ">
    <div class="menu-res-inner">
        <ul>
            <li {{ active == 'index' ? "class='current'" }}><a href="{{ path('index') }}">{{ 'nav.home' | trans }}</a></li>
            {% for category in categories %}
                <li {{ active == category.slug ? "class='current'" }} }  >
                    <a href="{{ path('index_category', {category: category.slug}) }}">{{ category.name }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</nav>
<div class="page">
    <div class="container">
        <!--header-->
        <header class="header">
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <a href="{{ path('index') }}" class="logo">
                        <img alt="Logo" src=" {{ asset('images/logo.png') }}" />
                    </a>
                </div>
            </div>
        </header>
        <!--menu-->
        <nav class="menu font-heading">
            <div class="menu-icon hidden-lg hidden-md">
                <i class="fa fa-navicon"></i>
                <span>{{ 'nav.menu' | trans }}}</span>
            </div>
            <ul class="hidden-sm hidden-xs">
                <li {{ active == 'index' ? "class='current'" }}><a href=" {{ path('index') }}">{{ 'nav.home' | trans }}</a></li>

                {% for category in categories %}
                    <li {{ active == category.slug ? "class='current'" }} }  >
                        <a href="{{ path('index_category', {category: category.slug}) }}">{{ category.name }}</a>
                    </li>
                {% endfor %}


                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li>
                        <a href="{{ path('security_logout') }}">{{ 'nav.logout' | trans }}</a>
                    </li>
                {% else %}
                    <li {{ active == 'login' ? "class='current'" }}>
                        <a href="{{ path('security_login') }}">{{ 'nav.login' | trans }}</a>
                    </li>
                    <li {{ active == 'registration' ? "class='current'" }}>
                        <a href="{{ path('member_registration') }}">{{ 'nav.register' | trans }}</a>
                    </li>
                {% endif %}



            </ul>
            <div class="search-icon">
                <div class="search-icon-inner">
                    <i class="fa fa-search"></i>
                </div>
                <div class="search-box">
                    <input type="text" placeholder="{{ 'nav.search.placeholder' | trans }}..." />
                    <button>{{ 'nav.search.button' | trans }}</button>
                </div>
            </div>
        </nav>