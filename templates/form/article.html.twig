{% block form %}

    {{ form_start(form) }}

        {{ form_row(form.title) }}

        {% if form.slug is defined %}
            {{ form_row(form.slug) }}
        {% endif %}

        {{ form_row(form.category) }}
        {{ form_row(form.content) }}
        {{ form_row(form.featuredImage) }}

    <div class="row">
        <div class="col-xs-6">
            {{ form_row(form.special) }}
        </div>
        <div class="col-xs-6">
            {{ form_row(form.spotlight) }}
        </div>
    </div>
        {{ form_row(form.save) }}

    {{ form_end(form) }}

{% endblock %}
